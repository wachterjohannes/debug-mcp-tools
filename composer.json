{
  "name": "wachterjohannes/debug-mcp-tools",
  "description": "Debugging tools for debug-mcp server (clock, PHP configuration)",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "mcp/sdk": "^0.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Wachterjohannes\\DebugMcp\\Tools\\": "src/"
    }
  },
  "extra": {
    "wachterjohannes/debug-mcp": {
      "classes": [
        "Wachterjohannes\\DebugMcp\\Tools\\ClockTool",
        "Wachterjohannes\\DebugMcp\\Tools\\PhpConfigTool"
      ]
    }
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
